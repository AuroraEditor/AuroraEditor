{
    "name": "ruby",
    "displayName": "Ruby Language Basics",
    "description": "Provides syntax highlighting and bracket matching in Ruby files.",
    "version": "1.0.0",
    "publisher": "Aurora Editor",
    "license": "MIT",
    "engines": {
        "auroraeditor": "*"
    },
    "contributes": {
        "languages": [
            {
                "id": "ruby",
                "extensions": [
                    ".rb",
                    ".rbx",
                    ".rjs",
                    ".gemspec",
                    ".rake",
                    ".ru",
                    ".erb",
                    ".podspec",
                    ".rbi"
                ],
                "filenames": [
                    "rakefile",
                    "gemfile",
                    "guardfile",
                    "podfile",
                    "capfile",
                    "cheffile",
                    "hobofile",
                    "vagrantfile",
                    "appraisals",
                    "rantfile",
                    "berksfile",
                    "berksfile.lock",
                    "thorfile",
                    "puppetfile",
                    "dangerfile",
                    "brewfile",
                    "fastfile",
                    "appfile",
                    "deliverfile",
                    "matchfile",
                    "scanfile",
                    "snapfile",
                    "gymfile"
                ],
                "aliases": [
                    "Ruby",
                    "rb"
                ],
                "firstLine": "^#!\\s*/.*\\bruby\\b",
                "configuration": "/language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "ruby",
                "scopeName": "source.ruby",
                "path": "/syntaxes/ruby.tmLanguage.json"
            }
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/auroraeditor/auroraeditor.git"
    }
}
