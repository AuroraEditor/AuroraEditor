{
    "name": "swift",
    "displayName": "Swift Language Basics",
    "description": "Provides snippets, syntax highlighting and bracket matching in Swift files.",
    "version": "1.0.0",
    "publisher": "Aurora Editor",
    "license": "MIT",
    "engines": {
        "auroraeditor": "*"
    },
    "contributes": {
        "languages": [
            {
                "id": "swift",
                "aliases": [
                    "Swift",
                    "swift"
                ],
                "extensions": [
                    ".swift"
                ],
                "configuration": "/language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "swift",
                "scopeName": "source.swift",
                "path": "/syntaxes/swift.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "swift",
                "path": "./snippets/swift.code-snippets"
            }
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/auroraeditor/auroraeditor.git"
    }
}
