root = true

[*]
indent_style=space
indent_size=2
tab_width=2
end_of_line = cr
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length=100

[*.{json,yml}]
indent_style = space
indent_size = 2

[*.{js,jsx,ts,tsx,html,css,scss}]
indent_style = space
indent_size = 2


[*.txt]
indent_style = tab
indent_size = 4

[*.{diff,md,markdown}]
trim_trailing_whitespace = false